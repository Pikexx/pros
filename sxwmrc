# General Options:
gaps                    : 10
border_width            : 1
master_width            : 60 # Percentage of screen width
resize_master_amount    : 1
snap_distance           : 5
motion_throttle         : 60 # Set to screen refresh rate for smoothest motions
should_float            : st
new_win_focus			: true
warp_cursor             : true

# Keybinds:
# Commands must be surrounded with ""
# Function calls don't need this

mod_key : super

# Application Launchers:
bind : mod + Return : "/home/env/st/st"
bind : ctrl + space : "dmenu_run"
bind : ctrl + f : "/home/env/shfiles/launch.sh"
bind : Print : "/home/env/shfiles/ss.sh"
bind : Tab : "/home/env/shfiles/picom.sh"

# Window Management:
call : mod + q : close_window
call : mod + shift + e : quit



# Floating/Fullscreen
call : mod + space : toggle_floating

# Reload Config
call : mod + r : reload_config

